{
  "name": "rigid-ui",
  "version": "0.0.0",
  "description": "The graphical component for rigid. Offline content management system.",
  "main": "index.html",
  "js-flags": "--harmony-generators",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-js": "watchify app.js -v -d -o static/bundle.js",
    "watch-css": "catw assets/css/*.css -o static/bundle.css",
    "watch-dev": "npm run watch-js & npm run watch-css",
    "package": "zip -r app.nw ./*"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/MaxGfeller/rigid-ui"
  },
  "author": "Max Gfeller <max.gfeller@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaxGfeller/rigid-ui/issues"
  },
  "homepage": "https://github.com/MaxGfeller/rigid-ui",
  "window": {
    "toolbar": true,
    "width": 800,
    "height": 600
  },
  "dependencies": {
    "bootstrap": "git://github.com/twbs/bootstrap",
    "co": "^3.0.5",
    "co-nth-arg": "^0.2.1",
    "code-mirror": "^3.22.0",
    "domready": "^1.0.4",
    "envify": "^1.2.1",
    "handlebars": "^2.0.0-alpha.2",
    "i18next": "^1.7.1",
    "level-js": "^2.1.2",
    "levelup": "^0.18.2",
    "marked": "^0.3.2",
    "npm": "^1.4.6",
    "page": "^1.3.7",
    "rigid": "^0.1.2",
    "thunkify": "0.0.1"
  },
  "devDependencies": {}
}
